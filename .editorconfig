# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
